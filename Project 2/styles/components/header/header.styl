@import "../../variables.styl";

.header {
    background: $scorpion;

    &__content {
        display: flex;
        flex-flow: row nowrap;
        align-items: center;
        justify-content: space-between;
        height: 61px;
    }

    &__logo {
        display: none;

        &--sm {
            display: block;
            margin: 0 15px;
        }
    }

    &__img {
        min-width: 100%;
    }

    &__text {
        display: none;
    }
}

@media all and (min-width: $screen-lg-min) {
    .header {
        background: url("../img/header-bg.jpg") no-repeat 0 0;
        height: auto;

        &__banner {
            display: flex;
            flex-flow: row nowrap;
            align-items: center;
            justify-content: space-between;
            margin-top: 55px;
            padding-bottom: 70px;
        }

        &__img {
            min-width: auto;
        }

        &__text {
            display: block;
            font: 3.9375em "Asap", sans-serif;
            text-transform: uppercase;
            color: $white;
            line-height: 1;

            &--yellow {
                color: $corn;
            }
        }

        &__text-wrap {
            text-align: center;
            padding-right: 15px;
        }

        &__content {
            padding-top: 30px;
        }

        &__logo {
            display: block;

            &--sm {
                display: none;
            }
        }
    }
}