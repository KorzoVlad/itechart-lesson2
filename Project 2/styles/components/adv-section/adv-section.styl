.adv-section {
    background: url("../img/section2-bg.jpg") repeat 0 0;
    padding: 30px 0;

    &__content {
        text-align: center;
    }

    &__title {
        font: 2.4375em "SegoeUIRegular", sans-serif;
        color: $corn;
        line-height: 1;
        text-transform: uppercase;
        text-align: center;
    }

    &__list {
        display: none;
    }

    &__img {
        margin-top: 30px;
    }
}

@media all and (min-width: $screen-lg-min) {
    .adv-section {
        &__content {
            display: flex;
            flex-flow: row nowrap;
            align-items: center;
            text-align: left;
        }

        &__list {
            display: block;
            margin-left: 70px;
        }

        &__item {
            display: flex;
            flex-flow: row nowrap;
            margin-top: 10px;

            &:first-child {
                margin-top: 15px;
            }
        }

        &__text {
            font: 1.375em "SegoeUIRegular", sans-serif;
            color: $delta;
            flex: 1;
        }

        &__round {
            width: 14px;
            height: 14px;
            flex-basis: 14px;
            border-radius: 50%;
            background: $corn;
            margin-right: 15px;
            margin-top: 10px;
        }
    }
}