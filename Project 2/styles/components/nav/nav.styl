@import "../../variables.styl";

.nav {
    background: $corn;

    &__list {
        display: flex;
        flex-flow: row nowrap;
        align-items: center;
    }

    &__icon {
        display: inline-block;

        &--about {
            width: 21px;
            height: 19px;
            background: url("../img/man-icon.png") no-repeat 0 0;
        }

        &--contact {
            width: 24px;
            height: 18px;
            background: url("../img/mail-icon.png") no-repeat 0 0;
        }

        &--services {
            width: 19px;
            height: 19px;
            background: url("../img/services-icon.png") no-repeat 0 0;
        }
    }

    &__item {
        padding: 21px 12px;
        border-left: 1px solid $galliano;

        &:first-child {
            border-left: 0;
        }
    }

    &__link {
        display: flex;
        flex-flow: row nowrap;
        font: 1.1875em "SegoeUIRegular", sans-serif;
        color: $buttered-rum;
        line-height: 1;
        text-transform: uppercase;
        cursor: pointer;
    }

    &__text {
        margin-left: 10px;
        cursor: pointer;
    }
}

@media all and (min-width: $screen-lg-min) {
    .nav {
        width: 450px;
        position: relative;

        &__list {
            position: relative;
            z-index: 1;
        }

        &:after {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            top: -8px;
            left: -8px;
            background: $corn;
            opacity: 0.2;
        }

        &:before {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            top: -4px;
            left: -4px;
            background: $corn;
            opacity: 0.5;
        }

        &__item {
            padding: 11px 14px;
        }

        &__link {
            font-size: 1.0625em;
        }
    }
}